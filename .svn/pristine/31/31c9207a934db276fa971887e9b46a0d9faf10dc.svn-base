							</div>
						</div>
						<div class="footer">
							<%@ include file="/common/footer.jsp"%>
						</div>
					</div>
				</div>
			</div>
		</div>
	</div>
	<script type="text/javascript">
		function openPop(no, event) {
			var url = "../product/getSingleProductData.jsp?productNo=" + no
			var xhr = new XMLHttpRequest()

			xhr.onreadystatechange = function() {
				if (xhr.readyState == 4 && xhr.status == 200) {
					var product = JSON.parse(xhr.responseText)
					document.querySelector('#modal-product-image')
							.setAttribute(
									'src',
									'../image/' + product.category + '/'
											+ product.imagePath)
					document.querySelector('#modal-product-title').textContent = product.no
							+ "번 상품 상세정보"
					document.querySelector('#modal-product-name').textContent = product.name
					document.querySelector('#modal-product-explain').textContent = product.explain
					document.querySelector('#modal-product-price').textContent = product.price
					document.querySelector('#modal-product-discount-price').textContent = product.discountPrice
					document.querySelector('#modal-product-amount').textContent = product.amount
					document.querySelector('#modal-product-modify').onclick = null
					var modify = 'modify'
					var del = 'delete'
					document.querySelector('#modal-product-modify').onclick = modOrDel
							.bind(event, modify, product.no)
					document.querySelector('#modal-product-delete').onclick = null
					document.querySelector('#modal-product-delete').onclick = modOrDel
							.bind(event, del, product.no)
				}
			}

			xhr.open("get", url)
			xhr.send()

		}

		var modOrDel = function(action, no, event) {
			console.log('event = ' + ', action = ' + action + ', no = ' + no)
			console.log(action)
			console.log(no)
			if ('delete' == action) {
				location.href = '/semi-project/product/deleteProduct.jsp?productNo='
						+ no
			} else if ('modify' == action) {
				location.href = '/semi-project/product/productform.jsp?productNo='
						+ no

			}

		}
	</script>

</body>

</html>
